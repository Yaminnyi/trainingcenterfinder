<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Offshore courses</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>
      .course{
        width:370px;   
        border:1px solid black;
        background-color: lightblue;
            
      }
      
    </style>
 </head>

  <body>
  <h1>STCW courses</h1>
  

  <% data.forEach(function(course){ %>

  
    <div class="course">

      <h3>Course Name:  <%= course.courses %></h3>
      <p>Training Center Name: <%= course.name %><p>
      <p>Start Date: <%= course.date %><p>
       <p>End Date: <%= course.end %><p>
     <p>  Course Detail: <textarea  name="w3review" rows="7" cols="44" style="background-color: lightblue; border-color:black;text-align: justify;"><%= course.detail %>  </textarea><p>
     <p>Duration:<%= course.duration %><p>
      <p>Center Address<%= course.address %><p>
      <p>Course fee: <%= course.price %></p>



  



<form action="../show" method="post">
      <input type="hidden" name="item_id" value="<%= course.id %>"/>
      <input type="hidden" name="item_courses" value="<%= course.courses %>"/>
      <input type="hidden" name="item_name" value="<%= course.name %>"/>
      <input type="hidden" name="item_tc_id" value="<%= course.tc_id %>"/>
      <input type="hidden" name="item_duration" value="<%= course.duration %>"/>
      <input type="hidden" name="item_price" value="<%= course.price %>"/>
      <input type="submit" name="submit" value="Register" type="button" class="btn btn-light" style="margin-left: 55px;   padding: 10px 24px;  text-align: center; text-decoration: none; display: inline-block; margin: 4px 2px; margin-left: 149px;"> <br>
      </form>   

      

     
  <% }); %>
  
  

  

 </body>

</html>